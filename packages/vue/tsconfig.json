{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client",
      "vitest/globals"
    ]
  },
  "exclude": [
    "**/dist",
    "**/node_modules",
    "**/test-results",
    "**/scripts"
  ]
}
